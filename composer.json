{
    "name":"jtgenerator/jtgenerator",
    "description":"\uD83D\uDE0E Typescript and ES6 class generator \uD83D\uDE0E",
    "homepage":"https://bumogen.com",
    "type":"library",
    "license": "MIT",
    "authors":[
        {
            "name":"Bj√∂rn Klemm",
            "email":"appsdock.enterprise@gmail.com"
        }
    ],

    "minimum-stability": "dev",

    "require": {
        "php": "^7.4",
        "ext-json": "*"
    },

    "require-dev": {
        "phpunit/phpunit": "8.3.5",
        "phpstan/phpstan": "0.12.*",
        "squizlabs/php_codesniffer": "3.*",
        "roave/security-advisories": "dev-master"
    },

    "autoload": {
        "psr-4": {
            "JTGenerator\\": "src/",
            "JTGenerator\\Tests\\": "tests/Tests/"
        }
    },

    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse",
        "phpcs": "vendor/bin/phpcs"
    },

    "scripts-descriptions": {
        "test": "Run all unit tests",
        "phpstan": "Static code analysis, find properly bugs",
        "phpcs": "Coding Standards"
    }
}
